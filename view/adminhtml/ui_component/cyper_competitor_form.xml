<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">cyper_competitor_form.competitor_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Competitor Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Magento\Backend\Block\Widget\Button\Back"/>
            <button name="save" class="Magento\Backend\Block\Widget\Button\SplitButton">
                <data>
                    <item name="label" xsi:type="string" translate="true">Save</item>
                    <item name="class" xsi:type="string">primary</item>
                    <item name="options" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">Save &amp; Close</item>
                            <item name="data_attribute" xsi:type="array">
                                <item name="mage-init" xsi:type="string">{"button":{"event":"saveAndClose"}}</item>
                            </item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">Save &amp; Continue</item>
                            <item name="data_attribute" xsi:type="array">
                                <item name="mage-init" xsi:type="string">{"button":{"event":"saveAndContinueEdit"}}</item>
                            </item>
                        </item>
                    </item>
                </data>
            </button>
            <button name="delete" class="Magento\Backend\Block\Widget\Button\Delete"/>
        </buttons>
        <namespace>cyper_competitor_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>cyper_competitor_form.competitor_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="competitor_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <validateUrl path="competitors/*/validate"/>
            <submitUrl path="competitors/*/save"/>
        </settings>
        <dataProvider class="Cyper\PriceIntelligent\Ui\DataProvider\CompetitorDataProvider" name="competitor_form_data_source">
            <settings>
                <requestFieldName>competitor_id</requestFieldName>
                <primaryFieldName>competitor_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>
        <field name="competitor_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">competitor</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>competitor_id</dataScope>
            </settings>
        </field>
        <field name="name" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">competitor</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="website" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">competitor</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-url" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Website</label>
                <dataScope>website</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">competitor</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Active</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="crawler_configuration">
        <settings>
            <label translate="true">Crawler Configuration</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="crawler_config" sortOrder="40" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">competitor</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Crawler Config (JSON)</label>
                <dataScope>crawler_config</dataScope>
            </settings>
            <formElements>
                <textarea>
                    <settings>
                        <rows>15</rows>
                        <notice translate="true">JSON configuration for scraping. Example: {"product_urls": ["..."], "selectors": {"sku": "...", "title": "...", "price": "..."}}</notice>
                    </settings>
                </textarea>
            </formElements>
        </field>
    </fieldset>
</form>
