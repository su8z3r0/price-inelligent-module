<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">suppliers_listing.suppliers_listing_data_source</item>
            <item name="deps" xsi:type="string">suppliers_listing.suppliers_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">spinner_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add New Supplier</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/*/new</item>
            </item>
        </item>
    </argument>

    <dataSource name="suppliers_listing_data_source" component="Magento_Ui/js/grid/provider">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">suppliers_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">supplier_id</argument>
            <argument name="requestFieldName" xsi:type="string">supplier_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">supplier_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="spinner_columns">
        <column name="supplier_id" sortOrder="10">
            <settings>
                <filter>text</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="name" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>

        <column name="source_type" sortOrder="30">
            <settings>
                <filter>select</filter>
                <label translate="true">Source Type</label>
                <options class="Cyper\PriceIntelligent\Model\Config\Source\SourceType"/>
            </settings>
        </column>

        <column name="is_active" sortOrder="40" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <label translate="true">Status</label>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <dataType>select</dataType>
            </settings>
        </column>

        <column name="created_at" sortOrder="50" class="Magento\Ui\Component\Listing\Columns\Date">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Created</label>
                <dataType>date</dataType>
            </settings>
        </column>

        <column name="updated_at" sortOrder="60" class="Magento\Ui\Component\Listing\Columns\Date">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Updated</label>
                <dataType>date</dataType>
            </settings>
        </column>

        <actionsColumn name="actions" class="Cyper\PriceIntelligent\Ui\Component\Listing\Column\SupplierActions" sortOrder="999">
            <settings>
                <indexField>supplier_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
