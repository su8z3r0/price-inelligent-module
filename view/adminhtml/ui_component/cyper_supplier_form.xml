<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">cyper_supplier_form.supplier_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Supplier Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="back" class="Cyper\PriceIntelligent\Block\Adminhtml\Supplier\Edit\BackButton"/>
            <button name="delete" class="Cyper\PriceIntelligent\Block\Adminhtml\Supplier\Edit\DeleteButton"/>
            <button name="save" class="Cyper\PriceIntelligent\Block\Adminhtml\Supplier\Edit\SaveButton"/>
        </buttons>
        <namespace>cyper_supplier_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>cyper_supplier_form.supplier_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="supplier_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="price_intelligent/suppliers/save"/>
        </settings>
        <dataProvider class="Cyper\PriceIntelligent\Ui\DataProvider\Supplier\Form\DataProvider" name="supplier_form_data_source">
            <settings>
                <requestFieldName>supplier_id</requestFieldName>
                <primaryFieldName>supplier_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General Information</label>
        </settings>

        <field name="name" formElement="input" sortOrder="20">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="source_type" formElement="select" sortOrder="30">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Source Type</label>
                <dataScope>source_type</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Cyper\PriceIntelligent\Model\Config\Source\SourceType"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="source_config" formElement="textarea" sortOrder="50">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Source Configuration (JSON)</label>
                <dataScope>source_config</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <notice translate="true"><![CDATA[Configuration parameters for the selected source type. <strong>DO NOT include "parser_type"</strong> here (use the Source Type field above).<br/><br/><strong>Examples by type:</strong><br/><strong>CSV:</strong> {"file_path": "/path/to/file.csv", "delimiter": ",", "enclosure": "\""}<br/><strong>FTP:</strong> {"host": "ftp.example.com", "username": "user", "password": "pass", "path": "/data/products.csv"}<br/><strong>HTTP:</strong> {"url": "https://example.com/products.csv", "headers": {}}<br/><strong>Local:</strong> {"file_path": "var/import/products.csv"}]]></notice>
            </settings>
            <formElements>
                <textarea>
                    <settings>
                        <rows>10</rows>
                    </settings>
                </textarea>
            </formElements>
        </field>
    </fieldset>
</form>
